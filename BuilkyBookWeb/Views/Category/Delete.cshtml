@model Category

<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Delete a Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name"  class="form-control" disabled/>
          
        </div
         <div class="mb-3">
            <label asp-for="displayOrder"></label>
            <input asp-for="displayOrder"  class="form-control" disabled/>
          
        </div>
       <div class="mt-3">
         <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" style="width:150px" class="btn btn-secondary">Go Back</a>
      </div>
    </div>
</form>

